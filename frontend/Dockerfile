# üîπ 1. –ò—Å–ø–æ–ª—å–∑—É–µ–º –æ—Ñ–∏—Ü–∏–∞–ª—å–Ω—ã–π –æ–±—Ä–∞–∑ Node.js –¥–ª—è –±–∏–ª–¥–∞ —Ñ—Ä–æ–Ω—Ç–µ–Ω–¥–∞
FROM node:23 AS builder

# –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ä–∞–±–æ—á—É—é –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é
WORKDIR /app

# –ö–æ–ø–∏—Ä—É–µ–º package.json –∏ package-lock.json (–µ—Å–ª–∏ –µ—Å—Ç—å)
COPY package.json package-lock.json ./

# –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏
RUN npm install

# –ö–æ–ø–∏—Ä—É–µ–º –≤–µ—Å—å –∏—Å—Ö–æ–¥–Ω—ã–π –∫–æ–¥
COPY . .

# –°–æ–±–∏—Ä–∞–µ–º —Ñ—Ä–æ–Ω—Ç–µ–Ω–¥
RUN npm run build

# üîπ 2. –ò—Å–ø–æ–ª—å–∑—É–µ–º Nginx –¥–ª—è —Ä–∞–∑–¥–∞—á–∏ —Å—Ç–∞—Ç–∏–∫–∏
FROM nginx:alpine

# –£–¥–∞–ª—è–µ–º –¥–µ—Ñ–æ–ª—Ç–Ω—ã–π –∫–æ–Ω—Ñ–∏–≥ Nginx
RUN rm /etc/nginx/conf.d/default.conf

# –ö–æ–ø–∏—Ä—É–µ–º –∫–∞—Å—Ç–æ–º–Ω—ã–π –∫–æ–Ω—Ñ–∏–≥ Nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# –ö–æ–ø–∏—Ä—É–µ–º —Å–æ–±—Ä–∞–Ω–Ω—ã–π —Ñ—Ä–æ–Ω—Ç–µ–Ω–¥ –≤ –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é Nginx
COPY --from=builder /app/dist /usr/share/nginx/html

# –û—Ç–∫—Ä—ã–≤–∞–µ–º –ø–æ—Ä—Ç 80
EXPOSE 80

# –ó–∞–ø—É—Å–∫–∞–µ–º Nginx
CMD ["nginx", "-g", "daemon off;"]
